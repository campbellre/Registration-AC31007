<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LessonCardView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    cardview:cardUseCompatPadding="true"
    cardview:cardElevation="8dp"
    cardview:cardCornerRadius="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4682b4">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:text="NamePlaceholder"
            android:id="@+id/LessonCardName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:text="@string/lesson_card_view_location_label"
            android:id="@+id/LessonCardLocationLabel"
            android:textSize="20sp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/LessonTimeLabel"
            android:layout_alignLeft="@+id/LessonTimeLabel"
            android:layout_alignStart="@+id/LessonTimeLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/lesson_card_view_time_label"
            android:id="@+id/LessonTimeLabel"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/LessonCardName"
            android:layout_alignLeft="@+id/LessonCardName"
            android:layout_alignStart="@+id/LessonCardName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/LessonCardTime"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="TimePlaceholder"
            android:layout_above="@+id/LessonCardLocationLabel"
            android:layout_alignRight="@+id/LessonCardLocation"
            android:layout_alignEnd="@+id/LessonCardLocation" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/LessonCardLocation"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/LessonCardLocationLabel"
            android:layout_alignRight="@+id/LessonCardName"
            android:layout_alignEnd="@+id/LessonCardName"
            android:text="LocationPlaceholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="TypePlaceHolder"
            android:id="@+id/LessonCardType"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_below="@+id/LessonCardName"
            android:layout_alignLeft="@+id/LessonCardName"
            android:layout_alignStart="@+id/LessonCardName" />

    </RelativeLayout>


</android.support.v7.widget.CardView>